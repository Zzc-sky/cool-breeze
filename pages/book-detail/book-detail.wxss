.container {
    width: 100%;
    background-color: #f5f5f5;
}

.header {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 40rpx 0;
    background-color: #fff;
}

.header image {
    width: 200rpx;
    height: 300rpx;
    box-shadow: 2px 2px 3px #e3e3e3;
}

.title {
    color: #2f2f2f;
    margin-top: 20rpx;
    font-size: 38rpx;
    font-weight: 700;
}

.author {
    font-size: 28rpx;
    color: #999;
    /* margin-bottom: 30rpx; */
}

.sub-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30rpx;
    margin-top: 30rpx;
    background-color: #fff;
}

.handline {
    font-size: 30rpx;
    font-weight: 600;
    color: #2f2f2f;
    margin-bottom: 20rpx;
}

.comment-container {
    display: flex;
    flex-wrap: wrap;
}

.comment-container z-tag {
    margin-right: 15rpx;
    margin-bottom: 10rpx;
}

.num {
    font-size: 22rpx;
    margin-left: 10rpx;
    color: #aaa;
}

.ex-tag1 {
    background-color: #fffbdd !important;
}

.ex-tag2 {
    background-color: #eefbff !important;
}

.content {
    text-indent: 58rpx;
}

.detail-container {
    display: flex;
    width: 100%;
    font-size: 28rpx;
    color: #666;
    justify-content: flex-start;
    margin-bottom: 100rpx;
}

.left-detail {
    display: flex;
    flex-direction: column;
    color: #999;
    margin-right: 30rpx;
    text-align: right;
}

.right-detail {
    display: flex;
    flex-direction: column;
    color: #999;
}

.post-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100rpx;
    box-shadow: 1px -1px 1px #e3e3e3;
    position: fixed;
    width: 100%;
    bottom: 0;
    background-color: #fff;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.post-fake {
    height: 60rpx;
    line-height: 60rpx;
    width: 460rpx;
    border: 1px solid #999;
    border-radius: 15px;
    font-size: 22rpx;
    padding-left: 20rpx;
}

.like {
    margin-right: 30rpx;
    margin-top: 10rpx;
}

.posting-container {
    position: fixed;
    width: 100%;
    bottom: 0;
    background-color: #fff;
    padding: 0 25rpx;
    box-sizing: border-box;
    z-index:100;
}

.post-header {
    display: flex;
    height: 100rpx;
    border-bottom: 1px solid #f5f5f5;
    border-top: 1px solid #f5f5f5;
    align-items: center;
    justify-content: space-between;
}

.post-header>text:first-child {
    font-size: 28rpx;
    color: #bbb;
}

.cancel {
    color: #666;
}

.posting-container .comment-container {
    width: 100%;
    padding: 20rpx 0; 
}

.post {
    height: 56rpx;
    font-size: 26rpx;
    background-color: #f5f5f5;
    border-radius: 15px;
    padding-left: 25rpx;
    margin-bottom: 20rpx;
}

.shadow {
    color: #999;
}