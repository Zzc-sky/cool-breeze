.container {
    display: flex;
    width: 100%;
    flex-direction: column;
    align-items: center;
}

.header {
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100rpx;
    width: 100%;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
    box-shadow: 0 0 3px 0 #e3e3e3;
    background-color: #fff;
    z-index: 99;
}

.header-box {
    display: flex;
    height: 68rpx;
    width: 700rpx;
    background-color: #f5f5f5;
    border-radius: 50px;
    justify-content: center;
    align-items: center;
    color: #999999;
}

.head-img {
    width: 14px;
    height: 14px;
    margin-right: 10px;
    margin-bottom: -2px;
}

.sub-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #f5f5f5;
    margin-top: 100rpx;
}

.sub-img {
    width: 106rpx;
    height: 34rpx;
    padding: 40rpx 0;
}

.books-container {
    display: flex;
    flex-wrap: wrap;
    padding: 0 90rpx;
    justify-content: space-between;
}

.books-container z-book {
    margin-bottom: 20px;
}