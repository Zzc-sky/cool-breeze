.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.about-container {
    position: absolute;
    width: 500rpx;
    display: flex;
    justify-content: space-between;
    top: 440rpx;
}

.bg-img {
    width: 100%;
    height: 574rpx;
}

.about-us {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.about-us image {
    width: 34rpx;
    height: 34rpx;
}

.description {
    font-size: 24rpx;
    color: #999999;
}

.avatar {
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
    border-radius: 50%;
}

.avatar-position {
    position: absolute;
    top: 255rpx;
}

.avatar-container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.like-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #f5f5f5;
}

.headline {
    width: 97rpx;
    height: 42rpx;
    margin-top: 30rpx;
}

.preview-container {
    display: flex;
    flex-wrap: wrap;
    margin-top: 30rpx;
    padding:0 30rpx;
    justify-content: space-between;
}

.preview {
    margin-bottom: 30rpx;
}