.container {
    display: flex;
    position: relative;
    flex-direction: column;
    width: 240rpx;
    height: 360rpx;
    box-shadow: 2px 2px 3px #e3e3e3;
}

.book-img {
    width: 100%;
    height: 100%;
    border-radius: 2px;
}

.description {
    width: 100%;
    position: absolute;
    display: flex;
    flex-direction: column;
    bottom: 0;
    font-size: 24rpx;
    background-color: #fff;
    padding: 5rpx 10rpx 8rpx 15rpx;
    border-bottom-right-radius: 2px;
    border-bottom-left-radius: 2px;
    box-sizing: border-box;
}

.title {
    margin-top: 10rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.author {
    font-size: 20rpx;
    color: #999;
    margin-bottom: 10rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.foot {
    font-size: 20rpx;
    display: flex;
    justify-content: flex-end;
}

.footer {
    color: #666;
}