.container {
    display: inline-flex
}

.index-container {
    display: flex;
    align-items: baseline;
}

.plain {
    font-size: 32rpx;
}

.index {
    font-size: 60rpx;
    line-height: 60rpx;
    font-weight: 800;

}

.line {
    height: 44rpx;
    margin: 0 14rpx;
    margin-bottom: 2rpx;
    border-left: 1px solid black;
}

.date-container {
    display: flex;
    height: 60rpx;
    flex-direction: column;
    margin-top: 5rpx;
}

.month {
    font-size: 24rpx;
    line-height: 24rpx;
}
.year {
    font-size: 20rpx;
}